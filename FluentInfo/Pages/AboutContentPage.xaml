<?xml version="1.0" encoding="utf-8" ?>

<Page
    x:Class="FluentInfo.Pages.AboutContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="8">
        <Button Click="SourceCode_Click">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon FontSize="16" Glyph="&#xE8A7;" />
                <TextBlock x:Uid="OpenSourceCodeButton" />
            </StackPanel>
        </Button>
        <TextBlock TextWrapping="Wrap">
            <Run>This product uses</Run>
            <Hyperlink NavigateUri="http://mediaarea.net/MediaInfo">MediaInfo</Hyperlink>
            <Run x:Name="VersionText" />
            <Run>library,</Run>
            <LineBreak />
            <Run>Copyright (c) 2002-2020 MediaArea.net SARL.</Run>
        </TextBlock>
    </StackPanel>
</Page>