<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="FluentInfo.Controls.PrettyView.TitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Margin="0,0,0,16">
        <StackPanel Orientation="Horizontal" Spacing="12">
            <FontIcon x:Name="TypeIcon" Margin="2,4,0,0" VerticalAlignment="Center" />
            <TextBlock x:Name="TitleTextBlock" Style="{StaticResource TitleTextBlockStyle}"
                       TextWrapping="WrapWholeWords"
                       VerticalAlignment="Center" />
        </StackPanel>
        <TextBlock x:Name="SubtitleTextBlock" Margin="0,4,0,0" TextWrapping="Wrap" FontSize="16"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontWeight="SemiBold" />
        <controls:WrapPanel x:Name="ChipsWrapPanel" Margin="0,8,0,0" VerticalSpacing="4" HorizontalSpacing="4" />
    </StackPanel>
</UserControl>