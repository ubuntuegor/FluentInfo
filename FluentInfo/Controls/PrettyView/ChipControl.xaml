<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="FluentInfo.Controls.PrettyView.ChipControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="{ThemeResource ControlFillColorDefaultBrush}" Padding="6,2" CornerRadius="4"
            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1">
        <TextBlock x:Name="ContentTextBlock" Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
    </Border>
</UserControl>